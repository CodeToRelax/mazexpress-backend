{
  "name": "mazexpress-backend",
  "version": "1.0.0",
  "description": "mazexpress express backend",
  "main": "dist/index.js",
  "author": "monir shembesh",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && npx tsc && tsc-alias -p tsconfig.json",
    "add-build": "git add dist",
    "start": "TZ='UTC' nodemon -r tsconfig-paths/register src/index.ts",
    "start:build": "TZ='UTC' node -r tsconfig-paths/register dist/index.js",
    "test:e2e": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix"
  },
  "pre-commit": [
    "build",
    "add-build"
  ],
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "dotenv-expand": "^10.0.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "firebase-admin": "^12.0.0",
    "joi": "^17.12.1",
    "mongodb": "^6.3.0",
    "mongoose": "^8.1.0",
    "mongoose-paginate-v2": "^1.8.0",
    "morgan": "^1.10.0",
    "morgan-body": "^2.6.9",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/morgan": "^1.9.9",
    "@types/validator": "^13.11.8",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "pre-commit": "^1.2.2",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
